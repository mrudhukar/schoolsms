<div class="passwordBox animated fadeInDown">
  <div class="row">

    <div class="col-md-12">
      <div class="ibox-content">
        <h2 class="font-bold">Forgot password</h2>

        <p>
          Enter your email address and instruction to reset password will be emailed to you.
        </p>

        <div class="row">
          <div class="col-lg-12">
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form", class: "m-t" }) do |f| %>

              <%= bootstrap_devise_error_messages! %>

              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", required: "" %>
              </div>

              <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-primary block full-width m-b" %>
            <% end %>

            <small>
              If you remember you password, <%= render "devise/shared/links" %>
            </small>


          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
